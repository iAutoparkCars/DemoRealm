<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobile.testeventbusandrealm.FirstActivity">



        <TextView
            android:id="@+id/display_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="22asdfasdfasdf"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/next_button"
            android:layout_width="100sp"
            android:layout_height="80sp"
            android:layout_alignEnd="@+id/display_text"
            android:layout_alignRight="@+id/display_text"
            android:layout_below="@+id/display_text"
            android:layout_marginTop="83dp"
            android:text="next screen" />

        <Button
            android:id="@+id/count_button"
            android:layout_width="100sp"
            android:layout_height="80sp"
            android:layout_alignEnd="@+id/display_text"
            android:layout_alignRight="@+id/display_text"
            android:layout_below="@+id/display_text"
            android:text="start count"
            android:layout_marginBottom="-124dp"
            app:layout_constraintBottom_toBottomOf="@+id/next_button"
            app:layout_constraintLeft_toRightOf="@+id/next_button"
            android:layout_marginLeft="8dp" />





</android.support.constraint.ConstraintLayout>
